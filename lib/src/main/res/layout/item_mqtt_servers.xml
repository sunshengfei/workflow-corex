<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/formMargin"
        android:layout_marginTop="@dimen/fieldSetMargin"
        android:layout_marginRight="@dimen/formMargin"
        android:layout_marginBottom="@dimen/fieldSetMargin"
        android:descendantFocusability="blocksDescendants"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/cardBackground"
        app:cardCornerRadius="6dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/fieldSetMargin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/defaultTextColor"
                    tools:text="title" />

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/iconSpacing"
                    android:gravity="center_vertical"
                    android:textColor="@color/defaultHintTextColor"
                    android:textSize="@dimen/H5"
                    tools:text="title" />
            </LinearLayout>

            <net.steamcrafted.materialiconlib.MaterialIconView
                android:id="@+id/icon_run"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/fieldSpacing"
                android:scaleType="center"
                android:visibility="visible"
                app:materialIcon="lan_connect"
                app:materialIconColor="@color/defaultTextColor"
                app:materialIconSize="30dp" />

            <net.steamcrafted.materialiconlib.MaterialIconView
                android:id="@+id/icon_edit"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/fieldSpacing"
                android:scaleType="center"
                android:visibility="visible"
                app:materialIcon="pencil_circle"
                app:materialIconColor="@color/defaultTextColor"
                app:materialIconSize="30dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
