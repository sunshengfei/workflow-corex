<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/action_container"
    style="@style/Widget.Compat.NotificationActionContainer"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:ignore="RtlSymmetry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/iconPadding"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/action_image"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center|start"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_app_store_holder" />

        <TextView
            android:id="@+id/action_title"
            style="@style/Widget.Compat.NotificationActionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginLeft="@dimen/iconPadding"
            android:layout_marginRight="@dimen/iconPadding"
            android:clickable="false"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name" />
    </LinearLayout>

    <TextView
        android:id="@+id/action_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:clickable="false"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/defaultTextColor"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/action_desc"
        style="@style/Widget.Compat.NotificationActionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:clickable="false"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="@string/app_name" />
</LinearLayout>